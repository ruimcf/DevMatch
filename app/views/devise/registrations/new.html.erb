<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <div class="well">
        <% if params[:plan] == '2' %>
          <h2>Pro Account Sign Up</h2>
          <%= render "pro_form" %>
        <% else %>
          <h2> Basic Sign up</h2>
          <%= link_to "Switch to Pro", new_user_registration_path(plan: '2'), class: 'btn btn-success btn-lg center-block switch-to-pro-btn' %>
          <%= render "basic_form" %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
